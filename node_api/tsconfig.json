{
    "compilerOptions": {
      "lib": ["es2020", ],
      "outDir": "./dist",
      "target": "es2020",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "allowJs": true,
      "skipLibCheck": true,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "isolatedModules": true,  
    },  
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  
  }